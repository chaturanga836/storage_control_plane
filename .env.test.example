# Test Configuration for Storage Control Plane
# Copy this to .env.test and modify as needed

# ClickHouse Test Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_DATABASE=storage_control_plane_test
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=

# PostgreSQL Test Configuration (if needed)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=storage_control_plane_test
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=postgres

# Test Data Directories
TEST_DATA_DIR=./test/testdata
TEST_FIXTURES_DIR=./test/fixtures
TEST_TEMP_DIR=./test/tmp

# Test Parquet Storage
TEST_PARQUET_BASE_DIR=./test/testdata/parquet
TEST_METADATA_DB_PATH=./test/testdata/metadata.db

# API Test Configuration
TEST_API_HOST=localhost
TEST_API_PORT=8080
TEST_API_TIMEOUT=30s

# Logging Configuration for Tests
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Test Specific Settings
TEST_TIMEOUT=5m
TEST_PARALLEL=4
TEST_VERBOSE=true

# Integration Test Services
CLICKHOUSE_TEST_DOCKER_IMAGE=clickhouse/clickhouse-server:latest
POSTGRES_TEST_DOCKER_IMAGE=postgres:15-alpine

# E2E Test Configuration
E2E_CLEANUP_AFTER_TEST=true
E2E_KEEP_CONTAINERS=false
E2E_SCREENSHOT_ON_FAILURE=true
