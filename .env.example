# Go Control Plane Configuration Template
# Copy this file to .env and update the values

# Go Control Plane Configuration
PORT=8090
ENVIRONMENT=production
LOG_LEVEL=info

# Python Services Configuration  
# IMPORTANT: Update PYTHON_IP with your Python EC2 instance IP address
PYTHON_IP=YOUR_PYTHON_EC2_IP_HERE

# Python Service Endpoints
AUTH_GATEWAY_URL=http://YOUR_PYTHON_EC2_IP_HERE:8080
TENANT_NODE_URL=http://YOUR_PYTHON_EC2_IP_HERE:8001
METADATA_CATALOG_URL=http://YOUR_PYTHON_EC2_IP_HERE:8087
OPERATION_NODE_URL=http://YOUR_PYTHON_EC2_IP_HERE:8086
CBO_ENGINE_URL=http://YOUR_PYTHON_EC2_IP_HERE:8088
MONITORING_URL=http://YOUR_PYTHON_EC2_IP_HERE:8089
QUERY_INTERPRETER_URL=http://YOUR_PYTHON_EC2_IP_HERE:8085

# Database Configuration (optional)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=storage_control
DB_USER=postgres
DB_PASSWORD=your_secure_password

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
SERVICE_TIMEOUT=10
RETRY_ATTEMPTS=3

# Distributed Mode Configuration
# Set to "true" to enable distributed/horizontal scaling mode
DISTRIBUTED_MODE=false

# ClickHouse Cluster Configuration (only used when DISTRIBUTED_MODE=true)
CLUSTER_NAME=analytics_cluster
# Format: host:port:database:shard:replica (comma-separated for multiple nodes)
# Example: "node1:9000:analytics:1:1,node2:9000:analytics:2:1,node3:9000:analytics:3:1"
CLUSTER_NODES=localhost:9000:analytics:1:1

# Partitioning Strategy
PARTITION_KEY=tenant_id
SHARDING_KEY=tenant_id

# Optional: Development settings
GO_ENV=development
LOG_LEVEL=info

# Optional: Security settings
# JWT_SECRET=your-secret-key-here
# TENANT_ENCRYPTION_KEY=your-encryption-key

# Optional: Storage settings
# WAL_FLUSH_THRESHOLD=1000
# PARQUET_BATCH_SIZE=10000
